<%- include ../layouts/header-index.ejs %>

<div class="container-fluid">
    
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Mis Pedidos</h4>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xxl-12 col-xl-12">
            <% if (pedidos.length > 0) { %>
            <% for(var i = 0; i < pedidos.length; i++) { %>
            <div class="card d-block">
                <div class="card-body">
                    
                    <div class="clearfix"></div>

                    <h3 class="mt-3"><i class="uil uil-store"></i> Detalle del pedido</h3>

                    <div class="row">
                        <div class="col-3">
                            <p class="mt-2 mb-1 text-muted fw-bold font-12 text-uppercase">Total</p>
                            <div class="d-flex">
                                <i class='uil uil-dollar-sign font-18 text-success me-1'></i>
                                <div>
                                    <h5 class="mt-1 font-14">
                                        <%= pedidos[i].total_pago %> Bs
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <p class="mt-2 mb-1 text-muted fw-bold font-12 text-uppercase">Fecha de Pedido</p>
                            <div class="d-flex">
                                <i class='uil uil-calendar-alt font-18 text-success me-1'></i>
                                <div>
                                    <h5 class="mt-1 font-14">
                                        <%= pedidos[i].fecha_pedido %>
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <p class="mt-2 mb-1 text-muted fw-bold font-12 text-uppercase">Método de Pago</p>
                            <div class="d-flex">
                                <i class='uil uil-atm-card font-18 text-success me-1'></i>
                                <div>
                                    <h5 class="mt-1 font-14">
                                        <% if (pedidos[i].forma_pago == 1) { %>
                                            QR
                                        <% } %>
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <p class="mt-2 mb-1 text-muted fw-bold font-12 text-uppercase">Estado de Pedido</p>
                            <div class="d-flex">
                                <i class='uil uil-shopping-trolley font-18 text-success me-1'></i>
                                <div>
                                    <% if (pedidos[i].estado_pago == 0) { %>
                                    <h5 class="mt-1 font-14 badge bg-warning">
                                        No confirmado
                                    </h5>
                                    <% } else { %>
                                        <h5 class="mt-1 font-14 badge bg-success">
                                            Confirmado
                                        </h5>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% if (pedidos[i].estado_pago == 0) { %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>Warning - </strong> Su pedido esta siendo verificado, para su respectivo envío
                    </div>
                    <% } else { %>
                        <div class="alert alert-success" role="alert">
                            <strong>Success - </strong> Su pedido fue verificado, se procederá con el envío
                        </div>
                    <% } %>

                    <h5 class="mt-3">Dirección de Entrega</h5>

                    <p class="text-muted mb-4">
                        <%= pedidos[i].direccion_entrega %>
                    </p>

                    <!-- start sub tasks/checklists -->
                    <h5 class="mt-4 mb-2 font-16">Productos</h5>
                    <div class="table-responsive">
                        <table class="table table-borderless table-centered mb-0">
                            <thead class="table-light">
                                <tr>
                                <th>Producto</th>
                                <th>Precio</th>
                                <th>Cantidad</th>
                                <th>Total</th>
                                </tr>
                            </thead>

                            <tbody>
                            <% for(var j = 0; j < pedidos[i].productos.length; j++) { %>
                            <tr>
                                <td>
                                <img
                                    src="<%= pedidos[i].productos[j].imagen %>"
                                    alt="contact-img"
                                    title="contact-img"
                                    class="rounded me-3"
                                    height="64"
                                />
                                <p class="m-0 d-inline-block align-middle font-16">
                                    <a href="#" class="text-body"
                                    ><%= pedidos[i].productos[j].nombre %></a
                                    >
                                </p>
                                </td>
                                <td><%= pedidos[i].productos[j].precio_producto_unitario %> Bs</td>
                                <td><%= pedidos[i].productos[j].cantidad_producto %></td>
                                <td><%= pedidos[i].productos[j].precio_producto_total %> Bs</td>
                            </tr>
                            <% } %>
                            
                        </tbody>

                        </table>
                    </div>

                </div>
            </div>
            <% } %>
            <% } else { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong>Warning - </strong> No tienes pedidos realizados
            </div>
            <% } %>
        </div>
    </div>
    
</div>


<%- include ../layouts/footer-index.ejs %>