    function agregarCarrito(id_producto, precio) {
        console.log('id_producto ==>', id_producto);
        console.log('precio ==>', precio);
        $.ajax({
            url: "/agregar/carrito",
            type: "post",
            data: {
                id_cliente: 2,
                id_producto,
                precio
            },
            success: function (response) {
                console.log(response);
                var dataHtml = "";
                if(response.ok) {
                    dataHtml = dataHtml +`
                    <div class="alert alert-success alert-dismissible bg-success text-white border-0 fade show" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong>Success - </strong> ${response.msg}
                    </div>
                    `;
                    //$.NotificationApp.send("Title","Your awesome message text","Position","Background color","Icon");
                    //$.NotificationApp.send("Bien hecho!","dddd","bottom-right","rgba(0,0,0,0.2)","success")
                } else {
                    dataHtml = dataHtml +`
                    <div class="alert alert-danger alert-dismissible bg-danger text-white border-0 fade show" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong>Error - </strong> ${response.msg}
                    </div>
                    `;
                }
                $("#msgcarrito").append(dataHtml);
            },
            error: function(jqXHR, textStatus, errorThrown) {
            console.log(textStatus, errorThrown);
            }
        });
    }
</script>
